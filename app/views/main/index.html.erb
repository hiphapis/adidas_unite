<% 
images = []
(1..10).each do |i|
	Dir.glob("app/assets/images/section#{i}/**/*").each do |img| 
		images << image_path(img.split("/")[3..-1].join("/")) if File.file?(img)
	end
end
%>
<script type="text/javascript" charset="utf-8">
var timer;
var preloadImages = ['<%= images.compact.join("','").html_safe %>'];
var getLoading = function(loaded, total) {
  if (!_.isNumber(loaded) || !_.isNumber(total)) {
    return false
  }
  
  var progress = parseInt(loaded / total * 100);
// console.log(progress);
	var dom;
	if (progress < 50) {
		dom = "copy1";
	}
	else {
		dom = "copy2";
	}

	$("#loading img.loading").hide();
	$("#loading ." + dom).show();

  if (progress >= 100) {
		completeLoading();
  }
}

var completeLoading = function() {
	$("#indicator .text, #scroll_guide").fadeToggle();
	$("#loading img.loading").hide();
	$("#loading .copy3").show();

	var timer;
	var guide_scene = 1;
	var guide_animate = function() {
		guide_scene = (guide_scene == 5)? 1 : guide_scene + 1;
		$("#scroll_guide").attr("src", "/assets/loading/scroll0" + guide_scene + ".png");
		timer = setTimeout(guide_animate, 200);
	};
	
	guide_animate();
	createScrollAnimation();
}

$(document).ready(function() {
	$("a.facebook").click(function(e) {
		e.preventDefault();
		window.open('http://www.facebook.com/sharer.php?u=http://adidas.com','sharer','toolbar=0,status=0,width=580,height=325');
	});
	$("a.twitter").click(function(e) {
		e.preventDefault();
