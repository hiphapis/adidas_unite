<div id="section8" class="artist">
	<%= image_tag("mobile/section8/bg.jpg", class: "fucking_ie_bg", alt: "") if fucking_ie? %>
	
	<div class="intro">
		<%= image_tag "mobile/section8/intro.png" %>
	</div>

	<div class="s8tp popups" style="display:none">
		<%= image_tag "mobile/section8/top_popup.png", class: "top" %>
	</div>
	<div class="s8bp popups" style="display:none">
		<%= image_tag "mobile/section8/bottom_popup.png", class: "bottom" %>
	</div>
	<div class="s8lp popups" style="display:none">
		<%= image_tag "mobile/section8/btn_left_popup.png", class: "left" %>
		<div class="close"></div>
	</div>
	<div class="s8rp popups" style="display:none">
		<%= image_tag "mobile/section8/btn_right_popup.png", class: "right" %>
		<div class="close"></div>
	</div>

	<div class="wrapper">
		<div class="scene1">
			<%= image_tag "mobile/section8/top.png", class: "top popup", data: { source: ".s8tp" } %>
			<%= image_tag "mobile/section8/bottom.png", class: "bottom popup", data: { source: ".s8bp" } %>
			<%= image_tag "mobile/section8/left.png", class: "left popup", data: { source: ".s8lp" } %>
			<%= image_tag "mobile/section8/right.png", class: "right popup", data: { source: ".s8rp" } %>
		</div>
		
		<div class="scene2">
			<div data-partial="masking">
				<%= image_tag "mobile/section4/scene/0.png" %>
			</div>
			<div class="movie">
				<%= image_tag "mobile/section4/movie.png" %>
			</div>
			
			<div class="texts">
				<%= image_tag "mobile/section8/left2.png", class: "left2 s8l" %>
				<%= image_tag "mobile/section8/right2.png", class: "right2 s8r" %>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" charset="utf-8">
	$(".s8l").click(function(e){
		ss.enableWindowScrollEvents(false);
		$(".s8lp").show();
	})
	$(".s8r").click(function(e){
		ss.enableWindowScrollEvents(false);
		$(".s8rp").show();
	})
</script>