<div id="section4" class="artist">
	<%= image_tag("mobile/section4/bg.jpg", class: "fucking_ie_bg", alt: "") if fucking_ie? %>
	
	<div class="intro">
		<%= image_tag "mobile/section4/intro.png" %>
	</div>

	<div class="s4tp popups" style="display:none">
		<%= image_tag "mobile/section4/top_popup.png", class: "top" %>
	</div>
	<div class="s4bp popups" style="display:none">
		<%= image_tag "mobile/section4/bottom_popup.png", class: "bottom" %>
	</div>
	<div class="s4lp popups" style="display:none">
		<%= image_tag "mobile/section4/btn_left_popup.png", class: "left" %>
		<div class="close"></div>
	</div>
	<div class="s4rp popups" style="display:none">
		<%= image_tag "mobile/section4/btn_right_popup.png", class: "right" %>
		<div class="close"></div>
	</div>


	<div class="wrapper">
		<div class="scene1">
			<%= image_tag "mobile/section4/top.png", class: "top popup", data: { source: ".s4tp" } %>
			<%= image_tag "mobile/section4/bottom.png", class: "bottom popup", data: { source: ".s4bp" } %>
			<%= image_tag "mobile/section4/left.png", class: "left popup", data: { source: ".s4lp" } %>
			<%= image_tag "mobile/section4/right.png", class: "right popup", data: { source: ".s4rp" } %>
		</div>
		
		<div class="scene2">
			<div data-partial="masking">
				<%= image_tag "mobile/section4/scene/0.png" %>
			</div>
			<div class="movie">
				<%= image_tag "mobile/section4/movie.png" %>
			</div>
			
			<div class="texts">
				<%= image_tag "mobile/section4/left2.png", class: "left2 s4l" %>
				<%= image_tag "mobile/section4/right2.png", class: "right2 s4r" %>
			</div>
		</div>
	</div>
</div>